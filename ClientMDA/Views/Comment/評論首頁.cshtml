@model List<ClientMDA.ViewModels.CCommentViewModel>

@section Styles{
    <style>
        .owl-stage-outer {
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .mem_info {
            float: left;
            line-height: 30px
        }

        .mem_img {
            height: 30px;
            width: 30px;
            float: left;
        }

        .card-columns {
            -webkit-column-count: 3;
            -moz-column-count: 3;
            column-count: 2;
            -webkit-column-gap: 1.25rem;
            -moz-column-gap: 1.25rem;
            column-gap: 1.25rem;
            orphans: 1;
            widows: 1;
            /*border: dotted 1px red;*/
        }

        .card {
            position: relative;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: rgba(255, 255, 255, 0.05);
            background-clip: border-box;
            border: 1px solid rgba(0, 0, 0, 0.125);
            border-radius: 0.25rem;
            border-radius: 15px;
        }

        .mb-3,
        .my-3 {
            margin-bottom: 2rem !important;
        }

        .text-muted {
            float: right;
        }

        .hero {
            padding-top: 0;
        }

        .hero__items {
            /*height:450px;*/
        }

        .memImg {
            border-radius: 50%;
            height: 35px;
            width: 35px;
            margin-right: 5px;
        }

        .card-text {
            overflow: hidden !important; /*溢位*/
            text-overflow: ellipsis !important; /*文字溢位ellipsis... */
            display: -webkit-box;
            -webkit-line-clamp: 2; /*限制元素顯示文字行數*/
            -webkit-box-orient: vertical; /*垂直排列*/
            word-break: break-all;
        }

        .card-title {
            overflow: hidden !important; /*溢位*/
            text-overflow: ellipsis !important; /*文字溢位ellipsis... */
            display: -webkit-box;
            -webkit-line-clamp: 1; /*限制元素顯示文字行數*/
            -webkit-box-orient: vertical; /*垂直排列*/
            word-break: break-all;
        }

        .mComment-text {
            overflow: hidden !important; /*溢位*/
            text-overflow: ellipsis !important; /*文字溢位ellipsis... */
            display: -webkit-box;
            -webkit-line-clamp: 3; /*限制元素顯示文字行數*/
            -webkit-box-orient: vertical; /*垂直排列*/
            word-break: break-all;
        }

        .set-comImg-bg { /*最新評論圖片設定*/
            height: 220px;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: top center;
        }
        .corComm {
            background-color: #00b0f0 !important;
            color: white !important;
            font-size: 16px !important;
            transition: opacity .5s ease-in-out !important;
        }
    </style>
}
<link href="~/css/Comment/評論首頁.css" rel="stylesheet" />
<link href="~/css/owl.carousel.min.css" rel="stylesheet" />
<link href="~/css/Comment/style.css" rel="stylesheet" />

<body class="text-white">
    <hr />
    <div class="section-title">
        <h5>熱門評論</h5>
    </div>

    <!--#region 評論輪播 Start-->
    <div class="container">
        <div class="hero__slider owl-carousel">

            @await Component.InvokeAsync("評論輪播", new { datas = Model })

        </div>
    </div>
    <!--#endregion 評論輪播 End-->

    <hr />
    <div class="section-title">
        <h5>最新評論</h5>
    </div>

    <!-- #region 最新評論 -->
    <div class="card-columns">

        @await Component.InvokeAsync("最新評論", new { datas = Model })

    </div>
    <!-- #endregion 最新評論 -->

    <hr />
    <div class="section-title">
        <h5>關注評論</h5>
    </div>

    <!-- #region 關注評論 -->
    <div class="card-columns">

        @await Component.InvokeAsync("關注評論", new { datas = Model })

    </div>
    <!-- #endregion 關注評論 -->

</body>

<!-- Js Plugins -->
