@model List<ClientMDA.ViewModels.CCommentViewModel>
@{
    ViewData["Title"] = "Default"; @*電影評論list*@
}

@{
    <div class="col-lg-11 col-md-8">
        <!-- #region 電影評論 -->
        <div class="anime__details__review">
            <div class="section-title">
                <h5>共 @Model.Count 則 電影評論</h5>
            </div>

            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="anime__review__item">
                    <div class="anime__review__item__pic">
                        <img src="~/images/Comment/mem01.png" alt="">
                    </div>
                    <div class="anime__review__item__text">
                        <h6>
                            <a href="@Url.Action("會員評論","Comment", new {id= Model[i].會員編號memberId})">@Model[i].暱稱nickName - </a>
                            <span>@Html.DisplayFor(modelItem => Model[i].發佈時間commentTime)</span>
                            <span class="mem_rate" style="color: #ffc107;">
                                <i class="fa fa-star"></i> @Model[i].評分rate
                            </span>
                        </h6>
                        <h5>@Model[i].評論標題commentTitle</h5><br />
                        <p class="mComment-text">@Model[i].評論內容comments</p>
                        <a href="@Url.Action("電影評論", "Comment", new { id = Model[i].評論編號commentId})"><span class="see-more">詳全文 >></span></a>
                    </div>
                </div>
            }
            <nav aria-label="...">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">2</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- #endregion 電影資訊 -->
        <!-- #region 你的評論 -->
        @*<div class="anime__details__form">
                <div class="section-title">
                    <h5>你的評論</h5>
                </div>

                <div class="col-lg-12">
                    <form action="#">
                        <textarea placeholder="Your Comment" class="txtarea"></textarea><br />
                        <button type="submit"><i class="fa fa-location-arrow"></i>送出</button>
                    </form>
                </div>

            </div>*@
        <!-- #endregion 你的評論 -->
        <div class="blog__details__form">
            <h4>你的評論</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-sm-6">
                        <input type="text" placeholder="Name">
                    </div>
                    @*<div class="col-lg-6 col-md-6 col-sm-6">
                            <input type="text" placeholder="Email">
                        </div>*@
                    <div class="col-lg-12">
                        <textarea placeholder="Message"></textarea>
                        <button type="submit" class="site-btn">送出</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
